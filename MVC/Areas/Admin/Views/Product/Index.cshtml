@{
    int i = 1;
}
@model List<ProductViewModel>
<div class="row">
    @await Html.PartialAsync("MenuAdmin")

    <div class="col-9">
        <h3 class="text-center">Продукты</h3>
        <br />
        <a class="btn btn-outline-warning" asp-controller="Product" asp-action="Add"><i class="bi bi-database-add"> Добавить новый продукт </i></a>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Название</th>
                            <th></th>
                            <th>Цена</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td class="col-3">
                                    <a style="color:navy" asp-area="" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id"><p>@product.Name</p></a>
                                </td>
                                <td>
                                    <div class="col-2 text-start">
                                        <img class="img-fluid" src="@product.ImagePath">
                                    </div>
                                </td>
                                <td class="col-2">
                                    @string.Format("{0:### ### ###}", product.Cost) р
                                </td>
                                <td class="col-4 text-end">
                                    <a class="btn btn-outline-warning" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id"><i class="bi bi-pencil"> Редактировать </i></a>
                                    <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                        <i class="bi bi-trash-fill">Удалить </i>
                                    </button>
                                    <!--Модальное окно-->
                                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="false">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Удаление продукта</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Вы уверены, что хотите удалить продукт?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                                                    <a class="btn btn-primary" asp-controller="Product" asp-action="Del" asp-route-id="@product.Id">Очистить</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
