@model ProductViewModel

<form method="post">
    <h4>Редактировать товары</h4>
    <br />
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

    <div class="row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Название товара:</label>
        <div class="col-sm-3">
            <input asp-for="Name" class="form-control" value="@Model.Name" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <label asp-for="Cost" class="col-sm-2 col-form-label">Цена товара руб.</label>
        <div class="col-sm-3">
            <input asp-for="Cost" class="form-control" value="@Model.Cost">
            <span asp-validation-for="Cost"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <label asp-for="ImagePath" class="col-sm-2 col-form-label">Изображение товара:</label>
        <div class="col-sm-3">
            <input asp-for="ImagePath" class="form-control" value="@Model.ImagePath" />
            <span asp-validation-for="ImagePath"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <label asp-for="Description" class="col-sm-2 col-form-label">Описание товара:</label>
        <div class="col-sm-3">
            <input asp-for="Description" class="form-control" value="@Model.Description" />
            <span asp-validation-for="Description"></span>
        </div>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id">Сохранить</button>
    <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">Отмена</a>
</form>