@model Role
<form method="post">
    <h4>Добавление роли</h4>
    <br />
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Название роли:</label>
        <div class="col-sm-3">
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary" asp-controller="Roles" asp-action="Add">Подтвердить добавление</button>
    <a class="btn btn-outline-primary" asp-controller="Roles" asp-action="Index">Отмена</a>
</form>