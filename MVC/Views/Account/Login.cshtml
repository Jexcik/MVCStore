@model Login

<form method="post">
    <h4>Вход</h4>
    <br />
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

    <div class="row mb-3">
        <label asp-for="LoginUser" class="col-sm-1 col-form-label">Логин</label><br />
        <div class="col-sm-3">
            <input asp-for="LoginUser" class="form-control" placeholder="E-Mail" />
            <span asp-validation-for="LoginUser"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Password" class="col-sm-1 col-form-label">Пароль</label>
        <div class="col-sm-3">
            <input asp-for="Password" class="form-control" id="password" placeholder="************" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm offset">
            <div class="form-check">
                <label class="form-check-label" asp-for="RememberMe">Запомнить меня?</label>
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" value="true" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" asp-controller="Account" asp-action="Login">Войти</button>
    <a type="submit" class="btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a>
</form>