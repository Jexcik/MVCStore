@model Register

<form method="post">
    <h4>Регистрация</h4>
    <br />
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

    <div class="row mb-3">
        <label asp-for="UserName" class="col-sm-1 col-form-label">Логин</label><br />
        <div class="col-sm-3">
            <input asp-for="UserName" class="form-control" placeholder="E-Mail" />
            <span asp-validation-for="UserName"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Password" class="col-sm-1 col-form-label">Пароль</label>
        <div class="col-sm-3">
            <input type="password" asp-for="Password" class="form-control" id="password" placeholder="***********" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="ConfirmPassword" class="col-sm-1 col-form-label">Подтвердите пароль</label>
        <div class="col-sm-3">
            <input asp-for="ConfirmPassword" type="password" class="form-control" id="password" placeholder="***********" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="FirstName" class="col-sm-1 col-form-label">Имя</label>
        <div class="col-sm-3">
            <input asp-for="FirstName" class="form-control" placeholder="Введите имя пользователя" />
            <span asp-validation-for="FirstName"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="LastName" class="col-sm-1 col-form-label">Фамилия</label>
        <div class="col-sm-3">
            <input asp-for="LastName" class="form-control" placeholder="Введите фамилию пользователя" />
            <span asp-validation-for="LastName"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Phone" class="col-sm-1 col-form-label">Телефон</label>
        <div class="col-sm-3">
            <input asp-for="Phone" type="tel" class="form-control" />
            <span asp-validation-for="Phone"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Register">Зарегистрироваться</button>
</form>