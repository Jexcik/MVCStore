@model UserDeliveryInfo

<div class="row">
    @*форма данных покупателя*@
    <div class="col-6 card shadow-lg">
        <form method="post">

            <div class="text-danger font-weight-bold" asp-validation-summary=None></div>

            <div class="form-group" style="margin: 10px">
                <label asp-for="Name">ФИО*</label>
                <input asp-for="Name" class="form-control" placeholder="Егоров Евгений Иванович" />
                <span asp-validation-for="Name" />
            </div>

            <div class="form-group" style="margin: 10px">
                <label asp-for="Email">Email*</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="evstroyka@gmail.com" />
                <span asp-validation-for="Email" />
            </div>

            <div class="form-group" style="margin: 10px">
                <label asp-for="Phone">Телефон*</label>
                <input asp-for="Phone" class="form-control" placeholder="+7 (915) 025-1037" />
                <span asp-validation-for="Phone" />
            </div>

            <div class="form-group" style="margin: 10px">
                <label asp-for="Address">Адрес*</label>
                <input asp-for="Address" type="text" class="form-control" placeholder="г. Москва" />
                <span asp-validation-for="Address" />
            </div>

            <div class="text-center" style="margin:40px">
                <a class="btn btn-primary" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-90deg-left"> Продолжить покупки</i></a>
                <button class="btn btn-outline-success" type="submit" asp-controller="Order" asp-action="Buy"><i class="bi bi-check-circle-fill"> Оформить заказ</i></button>
            </div>

        </form>
    </div>
</div>