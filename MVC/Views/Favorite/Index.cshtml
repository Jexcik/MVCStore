@model List<Product>

@if (Model.Count() == 0)
{
    <div class="text-center">
        <h3 class="bg-warning-subtle text-emphasis-warning">В списке сравнения еще нет товаров</h3>
        <a class="btn btn-outline-success" asp-area="" asp-controller="Home" asp-action="Index">К покупкам</a>
    </div>
}
else
{
    <div class="text-center">
        <h4>Избранные</h4>
        @foreach (var product in Model)
        {
            <a class="btn btn-outline-secondary" asp-area="" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id"><p>@product.Name</p></a>
        }
    </div>
}
